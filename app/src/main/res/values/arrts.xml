<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WeakTagsLayout">
        <!--横向的tag之间的间距-->
        <attr name="layout_horizontalColumnSpace" format="dimension" />
        <!--纵向的tag之间的间距-->
        <attr name="layout_verticalLinesSpace" format="dimension" />
        <!--父布局边框角度-->
        <attr name="layout_corners" format="dimension" />
        <!--父布局边框颜色-->
        <attr name="layout_strokeColor" format="color" />
        <!--父布局边框宽度-->
        <attr name="layout_strokeWidth" format="dimension" />
        <!--父布局背景颜色-->
        <attr name="layout_backgroundColor" format="color" />
        <!--tag左右的padding的值-->
        <attr name="tag_paddingLOR" format="dimension" />
        <!--tag上下的padding的值-->
        <attr name="tag_paddingTOB" format="dimension" />
        <!--tag文字大小-->
        <attr name="tag_textSize" format="dimension" />
        <!--tag文字颜色-->
        <attr name="tag_textColor" format="color" />
        <!--tag背景颜色-->
        <attr name="tag_backgroundColor" format="color" />
        <!--tag边框颜色-->
        <attr name="tag_strokeColor" format="color" />
        <!--tag边框大小-->
        <attr name="tag_strokeWidth" format="dimension" />
        <!--tag边框角度-->
        <attr name="tag_strokeCorners" format="dimension" />
        <!--点击选中模式-->
        <attr name="select_click" format="enum">
            <!--默认模式-->
            <enum name="normal" value="0" />
            <!--单选模式-->
            <enum name="single" value="1" />
            <!--多选模式-->
            <enum name="more" value="2" />
        </attr>
        <!--限制选中个数，只有当选中模式为限制时才有作用-->
        <attr name="select_limit_count" format="integer" />
        <!--选中tag背景颜色-->
        <attr name="select_tagBgColor" format="color" />
        <!--选中tag文字颜色-->
        <attr name="select_tagTextColor" format="color" />
        <!--选中tag边框颜色-->
        <attr name="select_tagStrokeColor" format="color" />
    </declare-styleable>
</resources>